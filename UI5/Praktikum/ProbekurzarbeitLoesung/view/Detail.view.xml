<mvc:View xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="routing.template.controller.Detail">
	<App>
		<pages>
			<Page title="Eventübersicht">
				<content>
					<VBox class="aussen">
						<Text class= "textcolor font" text="" id="idVeranstaltungText"></Text>
						<HBox class= "innen">
							<Label text="Veranstalter"></Label>
							<Input class="innen" id="idVeranstalterInput" />
							<Label text="Bezeichnung"></Label>
							<Input class="innen" id="idBezeichnungInput" />
							<Label text="Uhrzeit"></Label>
							<Input class="innen" id="idUhrzeitInput" />
							<Button type="Accept" text="Suche" press="onSucheButtonPress"></Button>
							<Button type="Reject" text="Filter löschen" press="onFilterLschenButtonPress"></Button>
						</HBox>
					</VBox>
					<Table id="idEventsTable" items="{event>/Events}" itemPress="onEventsTableItemPress">
						<columns>
							<Column><Label text="Event-Id"></Label></Column>
							<Column><Label text="Bezeichnung"></Label></Column>
							<Column><Label text="Datum"></Label></Column>
							<Column><Label text="Zeit"></Label></Column>
							<Column><Label text="Preiskategorie"></Label></Column>
							<Column><Label text="Ort-Id"></Label></Column>
						</columns>
						<items>
							<ColumnListItem type="Active">
								<cells>
									<Text text="{event>Eid}"/>
									<Text text="{event>Bezeichnung}"/>
									<Text text="{event>Datum}"/>
									<Text text="{event>Zeit} Uhr"/>
									<Text text="{event>Preiskategorie}"/>
								    <Text text="{event>Ort}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>